<resources>
    <style name="SuperMaterialTheme" parent="MyMaterialTheme">
        <!-- Customise your theme here -->
        <item name="colorAccent">@color/blue_300</item>
        <item name="colorButtonNormal">@color/blue_400</item>
    </style>

    <!-- Base application theme. -->
    <style name="MyMaterialTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/blue_700</item>
        <item name="android:textColor">@color/gray_dark</item>
        <item name="android:textColorSecondary">@color/gray_dark</item>
        <item name="colorControlHighlight">@color/blue_100</item>
        <item name="colorControlNormal">@color/blue_200</item>
        <item name="colorControlActivated">@color/blue_300</item>

        <item name="android:windowBackground">@color/white</item>

    </style>

    <style name="MyToolbarTheme" parent="ParentToolbarTheme">   
    </style>  

    <style name="ParentToolbarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:background">@color/blue_300</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>


    <style name="MyPopupTheme" parent="ThemeOverlay.AppCompat.Light"> 
        <item name="android:textColor">@color/gray_dark</item>
    </style>

</resources>
